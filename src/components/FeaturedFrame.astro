---
import axios from 'axios';
// import coinCursor from '../assets/gold-coin.png';
const {title, script} = Astro.props;
const response = await axios.get("https://picsum.photos/800/600");
const imageUrl = response.request.res.responseUrl;
---

<div class="frame">
    <div class="overlay">
        <h2 class="frame-title">{title}</h2>
    </div>

    <div class="frame-content">
        <div id="src-background"><img src={imageUrl}></div>
        <canvas id="scratcher"></canvas>
    </div>

    <script src={script} defer></script>
</div>


<style>
    .frame-content {
        display: flex;
        position: relative;
        justify-content: center;
        align-items: center;
        flex-grow:1;
        height:100%;
        min-height: 0;
        cursor: pointer;
    }

    #src-background {
        position:absolute;
        inset: 0;
        z-index:0;
        /* cursor: url({coinCursor}) 16 16, auto; */
    }

    #src-background img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display:block;
    }

    #scratcher {
        position: absolute;
        inset:0;
        width:100%;
        height:100%;
        z-index: 1;
        display:block;
    }
</style>